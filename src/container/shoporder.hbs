
<header>
  <div class='card my-3 py-2'>
    {{#with navigation}}
      <div class='nav'>
        {{#each links}}
          <div class='nav-item'>
            {{#if href}}
              <a
                href='{{href}}'
                class='nav-link'
              >{{text}}</a>
            {{else}}
              <a
                href='{{href}}'
                class='nav-link disabled'
              >{{text}}</a>
            {{/if}}
          </div>
        {{/each}}
      </div>
    {{/with}}
  </div>
</header>

<main>
  <div class='row'>
    <div class='col-8'>
      <div class='card'>
        <h1 class='mb-5'>{{header}}</h1>
        {{#with contacts_data}}
          <h2 class='mb-3'>{{title}}</h2>
    
          <div>
            {{#each buttons}}
              {{#if isPrimary}}
                <button
                  class='btn btn-warning'>{{text}}</button>
              {{else}}
                <button class='btn btn-outline-warning'>{{text}}</button>
              {{/if}}
            {{/each}}
          </div>
      {{!-- // =========================================================== --}}
         
            <div>
                <div class='row'>
                {{#with form}}
                  {{#with input}}
                    <div class='col-4 my-3'>
                      {{#with surname}}
                        <label class='form-label'>{{label}}</label>
                        <input placeholder='{{placeholder}}' class='form-control'/>
                        <div class='form-text'>{{caption}}</div>
                      {{/with}}
                    </div>
        
                    <div class='col-4 my-3'>
                      {{#with name}}
                        <label class='form-label'>{{label}}</label>
                        <input placeholder='{{placeholder}}' class='form-control' type='text'/>
                        <div class='form-text'>
                          {{caption}}
                        </div>
                      {{/with}}
                    </div>
                    </div>
    
    
                    <div class='row'>
                    <div class='col-4 my-3'>
                    {{#with phone}}
                      <label class='form-label'>{{label}}</label>
                      <input class="form-control" placeholder='{{placeholder}}' type='tel'/>
                     <div class='form-text'>{{caption}}</div>
                    {{/with}}
                    </div>
        
                    <div class='col-4 my-3'>
                    {{#with email}}
                     <label class='form-label'>{{label}}</label>
                     <input class="form-control" placeholder='{{placeholder}}' type='email'/>
                     <div class='form-text'>{{caption}}</div>
                    {{/with}}
                    </div>
                    </div>
            </div>
    
           </div>
            {{/with}}
     {{!-- // ================================================================ --}}       
             <div>
                 <div class='card py-3'>
                    <div class='form-check form-switch form-control-lg'>
                        {{#each switch}}
                            {{#if isActive}}
                            <input class='form-check-input' type='checkbox' role='switch' checked>
                            <label class='form-check-label'>{{text}}</label><br>
                            {{else}}
                            <input class='form-check-input' type='checkbox' role='switch'>
                            <label class='form-check-label'>{{text}}</label><br>
                            {{/if}}
                        {{/each}}
                    </div>
             </div>
             </div>
        {{/with}}   
            
        {{/with}}
      </div>
  
            {{!-- // ================================================================ --}}
  
  
    <div class='col-4'>
      <div class='row'>
          <div class='card p-2'>
              {{#each action_block}}
                  <button class='my-1 btn btn-{{#if isSuccess}}success{{/if}}{{#if isDanger}}danger{{/if}}{{#if isInfo}}info{{/if}}' >{{text}}</button>
              {{/each}}
          </div>
         
  
            {{!-- // ================================================================ --}}
  
         <div class='card'>
          {{#with total}}
              <h3>{{title}}</h3>
      
              {{#each item_list}}
              {{name}}: {{price}}<br>
              {{/each}}
              <hr>
              {{#each additional_info}}
              {{text}}: {{value}}<br>
              {{/each}}
          
              <hr>
              {{#with total_price}}
              {{text}}: {{value}}<br>
              {{/with}}
              <hr>
              {{#each button}}
              <button class='my-2 btn btn-{{#if isPrimary}}primary{{/if}}{{#if isOutline}}outline-primary{{/if}}'>{{text}}</button>
              {{/each}}
          {{/with}}
        </div>
      </div>
    </div> 
  </div>

{{!-- // ================================================================ --}}
 
