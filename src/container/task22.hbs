<main>
  <h1 class='text-center'>{{page_header.title}}</h1>
  <p
    class='text-center text-uppercase'
  >{{page_header.description}}</p>
</main>
<section>
  <div class='card'>
    <div class='card-body'>
      {{#with section}}
        {{#with about_us}}
          {{#with title_list}}
            <div class='display-6 text-end'>{{main}}</div>
            <h2 class='text-end'>{{sub}}</h2>
          {{/with}}
          <button
            class='btn btn-outline-info'
          >{{button.text}}</button>
        {{/with}}
      {{/with}}
    </div>
  </div>
</section>

<section>
  <div class='card'>
    <div class='card-body'>
      {{#with section}}
        {{#with advantage}}

          <div class='display-5 text-muted'>{{title}}</div>
          <div class='card'>
            <div class='card-body'>
              {{#with efficiency}}
                <div
                  class='display-4 text-muted'
                >{{title}}</div>
                <h6 class='text-muted'>{{sub_title}}</h6>
                <p class='text-muted'>{{description}}</p>
                <button
                  class='btn btn-outline-warning'
                >{{button}}</button>
              {{/with}}
            </div>
          </div>

          <br />

          <div class='card'>
            <div class='card-body'>
              {{#with innovation}}
                <div
                  class='display-4 text-muted text-center'
                >{{title}}</div>
                <h6
                  class='text-muted text-center'
                >{{sub_title}}</h6>
                <p
                  class='text-muted text-center'
                >{{description}}</p>
                <button
                  class='btn btn-outline-warning'
                >{{button}}</button>
              {{/with}}
            </div>
          </div>

          <br />

          <div class='card'>
            <div class='card-body'>
              {{#with collaboration}}
                <div
                  class='display-4 text-muted text-end'
                >{{title}}</div>
                <h6
                  class='text-muted text-end'
                >{{sub_title}}</h6>
                <p
                  class='text-muted text-end'
                >{{description}}</p>
                <button
                  class='btn btn-outline-warning'
                >{{button}}</button>
              {{/with}}
            </div>
          </div>

        {{/with}}
      {{/with}}
    </div>
  </div>
</section>
<section>
  <div class='card'>
    <div class='card-body'>
      <div class='text-dark display-5'>
        {{section.agreement.title}}
      </div>
      <div class='card'>
        <div class='card-body'>
          <h5>{{section.agreement.info.sub_title}}</h5>
            </div>
            <div class='card'>
                <div class='card-body'>
                <p>{{section.agreement.info.detail.text}}</p>
                <buttob class='btn btn-success'>{{section.agreement.info.detail.button}}</buttob>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>