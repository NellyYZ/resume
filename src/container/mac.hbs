{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <main>
    <h1>{{name}}</h1>
    <p>{{description}}</p>
    <p>
      <strong>${{price}}</strong>
    </p>
    <p>
      <i>{{category}}</i>
    </p>
  </main>
  <hr />
  <section>
    <h2>Features</h2>
    {{#with features}}

      <h3>Processor</h3>
      {{#with processor}}
        {{brand}}
        |
        {{model}}
        |
        {{speed}}
        |
        {{cores}}
        cores |
        {{cache}}
        cache
      {{/with}}

      <h3>Memory</h3>
      {{#with memory}}
        {{type}}
        |
        {{size}}
        |
        {{speed}}
      {{/with}}

      <h3>Storage</h3>
      {{#with memory}}
        {{type}}
        |
        {{size}}
      {{/with}}

      <h3>Display</h3>
      {{#with display}}
        {{size}}
        |
        {{resolution}}
        |
        {{technology}}
        |
        {{color_space}}
        |
        {{brightness}}
        |
        {{refresh_rate}}
      {{/with}}

      <h3>Graphics</h3>
      {{#with graphics}}
        {{brand}}
        |
        {{model}}
        |
        {{memory}}
      {{/with}}

      <h3>Ports</h3>
      {{#each ports}}
        {{type}}
        |
        {{count}}

        <br />
        <ul>
          {{#each features}}
            <li>
              {{this}}
            </li>
          {{/each}}
        </ul>
      {{/each}}

      <h3>Battery</h3>
      {{#with battery}}
        {{type}}
        |
        {{capacity}}
        |
        {{life}}
      {{/with}}
      {{weight}}
      <h4>
        Dimensions:
      </h4>
      {{#with dimensions}}
        {{height}}
        /
        {{width}}
        /
        {{depth}}
      {{/with}}
      <br />
      Operating system -
      {{operating_system}}

      <h2>Accessories</h2>
      {{#each accessories}}
        <li>
          {{name}}
          - ${{price}}
        </li>
      {{/each}}

    {{/with}}
  </section>
</div>

